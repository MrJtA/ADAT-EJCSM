<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="logicaRefrescos">
    <class name="Dispensador" table="dispensadores">
        <id name="id" column="id" type="int">
            <generator class="increment"/> 
        </id>
        
        <property name="clave" column="clave" type="string"/>
        <property name="nombreProducto" column="nombre_producto" type="string"/>
        <property name="cantidad" column="cantidad" type="int"/>
        <property name="precio" column="precio" type="int"/>
    </class>
</hibernate-mapping>