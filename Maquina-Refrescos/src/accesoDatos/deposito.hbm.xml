<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="logicaRefrescos">
    <class name="Deposito" table="depositos">
        <id name="id" column="id" type="int">
            <generator class="assigned"/>
        </id>
        
        <property name="nombreMoneda" column="nombre_moneda" type="string"/>
        <property name="valor" column="valor" type="int"/>
        <property name="cantidad" column="cantidad" type="int"/>
    </class>
</hibernate-mapping>