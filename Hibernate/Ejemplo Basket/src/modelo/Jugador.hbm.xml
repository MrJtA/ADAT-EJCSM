<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="modelo.Jugador" table="player">
		<id name="idJugador" type="int">
			<column name="playerId" />
			<generator class="increment" />
		</id>

		<property name="nombre" type="string">
			<column name="playerName" length="30" not-null="true" />
		</property>
		<property name="numero" type="int">
			<column name="playerNumber" not-null="false" />
		</property>

		<!-- Cunado hay la clase tiene un objeto como atributo  y el cual tiene una tabla en la bd-->
		<many-to-one name="equipo" column="idTeamFK" 
			not-null="true" />	
						
		<!--Inverse true para indicar que la clase que manda es la del many y cascade all para que los cambios afecten a todos los hijos-->	
		<set name="posiciones" inverse="true" cascade="all">
            <key column="player" not-null="true" />
            <one-to-many class="modelo.JugadorPosicion"/>
        </set>	
			
						
	</class>

</hibernate-mapping>

<!--   class="Equipo"  en la many-to-one -->