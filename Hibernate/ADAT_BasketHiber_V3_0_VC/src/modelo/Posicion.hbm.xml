<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="modelo.Posicion" table="position">
		<id name="idPosicion" type="int">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<property name="posicion" type="string">
			<column name="text" length="30" not-null="true" />
		</property>
		<property name="descripcion" type="string">
			<column name="DESCRIPTION" length="60" not-null="true" />
		</property>
		
		<set name="jugadores" inverse="true" cascade="all">
            <key column="position" not-null="true" />
            <one-to-many class="modelo.JugadorPosicion"/>
        </set>		
		
	</class>

</hibernate-mapping>